<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SlidingPuzzleActivity">

    <TextView
            android:id="@+id/sliding_chronometer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"
            android:padding="5dp"
            android:background="@color/color_timer_begin"
    />

    <ImageView
            android:id="@+id/sliding_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/sliding_puzzle_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"
    />

    <GridLayout
            android:id="@+id/sliding_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3"
            android:useDefaultMargins="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
                android:id="@+id/image_0"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="0"
                android:layout_row="0"
                android:contentDescription="@string/sliding_puzzle_image"
                android:scaleType="fitXY"
                android:padding="0dp"
        />

        <ImageButton
                android:id="@+id/image_1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="1"
                android:layout_row="0"
                android:contentDescription="@string/sliding_puzzle_image"
                android:scaleType="fitXY"
                android:padding="0dp"
        />

        <ImageButton
                android:id="@+id/image_2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="2"
                android:layout_row="0"
                android:contentDescription="@string/sliding_puzzle_image"
                android:scaleType="fitXY"
                android:padding="0dp"
        />

        <ImageButton
                android:id="@+id/image_3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="0"
                android:layout_row="1"
                android:contentDescription="@string/sliding_puzzle_image"
                android:scaleType="fitXY"
                android:padding="0dp"
        />

        <ImageButton
                android:id="@+id/image_4"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="1"
                android:layout_row="1"
                android:contentDescription="@string/sliding_puzzle_image"
                android:scaleType="fitXY"
                android:padding="0dp"
        />

        <ImageButton
                android:id="@+id/image_5"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="2"
                android:layout_row="1"
                android:contentDescription="@string/sliding_puzzle_image"
                android:scaleType="fitXY"
                android:padding="0dp"
        />

        <ImageButton
                android:id="@+id/image_6"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="0"
                android:layout_row="2"
                android:contentDescription="@string/sliding_puzzle_image"
                android:scaleType="fitXY"
                android:padding="0dp"
        />

        <ImageButton
                android:id="@+id/image_7"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="1"
                android:layout_row="2"
                android:contentDescription="@string/sliding_puzzle_image"
                android:scaleType="fitXY"
                android:padding="0dp"
        />

        <ImageButton
                android:id="@+id/image_8"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_column="2"
                android:layout_row="2"
                android:contentDescription="@string/sliding_puzzle_image"
                android:scaleType="fitXY"
                android:padding="0dp"
        />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>